{
  "include": ["**/*.ts", "**/*.tsx", "**/*.vue"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "scripthost",
      "dom",
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "@types/node",
      "@nuxt/vue-app",
      "@nuxt/types"
    ],
    "moduleResolution": "node",
    "jsx": "preserve",
    "strict": false,
    "sourceMap": true,
    "allowJs": true,
    "removeComments": true,
    "noEmit": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "importHelpers": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "noImplicitThis": false
  }
}
